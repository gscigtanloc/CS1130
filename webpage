     <script>
              function showConversion() {
      document.getElementById("links-container").style.display = "none";
      document.getElementById("conversion-container").style.display = "flex";
    }
     function goBackFromConversion() {
      document.getElementById("conversion-container").style.display = "none";
      document.getElementById("links-container").style.display = "flex";
    }
                function convertTemperature() {
                    var fahrenheit = parseFloat(prompt("Enter temperature in Fahrenheit:"));
                    var celsius = (fahrenheit - 32) * (5/9);
                    alert(fahrenheit + " Fahrenheit is equal to " + celsius.toFixed(2) + " Celsius");
                }

                function convertTemperatureReverse() {
                    var celsius = parseFloat(prompt("Enter temperature in Celsius:"));
                    var fahrenheit = (celsius * (9/5)) + 32;
                    alert(celsius + " Celsius is equal to " + fahrenheit.toFixed(2) + " Fahrenheit");
                }

                function convertLength() {
                    var meters = parseFloat(prompt("Enter length in Meters:"));
                    var feet = meters * 3.28084;
                    alert(meters + " Meters is equal to " + feet.toFixed(2) + " Feet");
                }

                function convertLengthReverse() {
                    var feet = parseFloat(prompt("Enter length in Feet:"));
                    var meters = feet / 3.28084;
                    alert(feet + " Feet is equal to " + meters.toFixed(2) + " Meters");
                }

   
            </script>
      </head>
    

          <div id="links-container" class="links-container">
        <a <button class="w3-button w3-hover-yellow w3-xlarge w3-circle-xlarge w3-orange link" onclick="showConversion()"> Unit Conversion</a>
        <br>

      </div>


      <div id="conversion-container" class="conversion-container" style="display: none;">
        <p>SELECT A CONVERSION TYPE:</p>
        <button class="w3-button w3-hover-yellow w3-xlarge w3-orange link" onclick="convertTemperature()">Celsius to Fahrenheit</button> </a>
        <button class="w3-button w3-hover-yellow w3-xlarge  w3-orange link" onclick="convertTemperatureReverse()">Fahrenheit to Celsius</button>
        <button class="w3-button w3-hover-yellow w3-xlarge  w3-orange link" onclick="convertLength()">Meters to Feet</button>
        <button class="w3-button w3-hover-yellow w3-xlarge  w3-orange link" onclick="convertLengthReverse()">Feet to Meters</button>
        <br>

        <a href="./index.html" class="w3-button w3-hover-yellow w3-medium w3-#f7c477 link" style="border:thick solid orange" onclick="goBackFromConversion()">BACK TO MENU</a>
